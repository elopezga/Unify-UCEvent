<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <!--text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name of Event"
        android:id="@+id/name_of_event"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#454545" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="# Atten"
        android:id="@+id/attending_of_event"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/name_of_event"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:textColor="#454545" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/date_of_event"
        android:layout_below="@+id/name_of_event"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#454545" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/time_of_event"
        android:layout_below="@+id/date_of_event"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#454545" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location"
        android:id="@+id/location_of_event"
        android:layout_below="@+id/time_of_event"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#454545" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:id="@+id/join_or_going"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/time_of_event"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="joinButtonClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Event"
        android:id="@+id/view_event_button"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:onClick="viewEvent"
        android:layout_below="@+id/location_of_event" />
</RelativeLayout>
